#account
  %h1.pagetitle
    =t :please_sign_in
    
  - if flash[:notice]
    %p.standfirst.green
      = flash[:notice]

  = form_for(@user, :url => droom_client.sign_in_path, :method => 'post') do |f|
    %p
      = f.label :email
      %br
      = f.email_field :email, :class => 'login'

    %p
      = f.label :password
      %span.reminder
        = link_to t(:forgot_password), droom_url("/users/password/new?backto=#{URI.encode(request.url)}")
      %br
      = f.password_field :password, :class => 'login'

    %p
      = f.check_box :remember_me
      = f.label :remember_me, :class => "minor"

    .buttons
      %p
        = f.submit t(:sign_in), :class => "go"
